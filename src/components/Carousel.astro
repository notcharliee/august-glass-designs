---
interface Props {
  items: {
    src: `/items/${string}.jpg`,
  }[],
}

const { items } = Astro.props;
---

<div class="flex gap-4 w-[21rem] h-full overflow-hidden group">
  <div class="min-w-40 h-full flex flex-col gap-4 animate-[scroll_10s_linear_infinite] group-hover:[animation-play-state:_paused]">
    {items.slice(0, 6).map(item => 
      <img
        src={item.src}
        alt="carousel item"
        class="object-cover w-full h-[200px] min-h-[200px] duration-200 hover:scale-95"
      >
    )}
    {items.slice(0, 6).map(item => 
      <img
        src={item.src}
        alt="carousel item"
        class="object-cover w-full h-[200px] min-h-[200px] duration-200 hover:scale-95"
      >
    )}
  </div>
  <div class="min-w-40 h-full flex flex-col gap-4 animate-[scroll_15s_linear_infinite] group-hover:[animation-play-state:_paused]">
    {items.slice(6, 12).map(item => 
      <img
        src={item.src}
        alt="carousel item"
        class="object-cover w-full h-[200px] min-h-[200px] duration-200 hover:scale-95"
      >
    )}
    {items.slice(6, 12).map(item => 
      <img
        src={item.src}
        alt="carousel item"
        class="object-cover w-full h-[200px] min-h-[200px] duration-200 hover:scale-95"
      >
    )}
  </div>
  <div class="absolute top-0 h-20 w-full bg-gradient-to-b from-background to-transparent" />
  <div class="absolute bottom-0 h-20 w-full bg-gradient-to-b from-transparent to-background" />
</div>
