---
import { ViewTransitions } from "astro:transitions"

import { cn } from "~/lib/utils"

interface Props {
	title?: string,
	description?: string,
	og_image?: string,
	og_type?: "website" | "article",
	class?: string,
}

let {
	title,
	description,
	og_image,
	og_type,
} = Astro.props

title = title ? title + " - August Glass Designs" : "August Glass Designs"
description = description ?? "Terrariums, home decor and glass gifts. Handmade in England."
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">

		<title>{title}</title>

		<meta name="author" content="@mostlymayhem">
		<meta name="creator" content="@mostlymayhem">
		<meta name="keywords" content="Glass,Home,Decor,Terrariums,Handmade">
		<meta name="description" content={description} />

		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:type" content={og_type}>
		<meta property="og:image" content={og_image ? import.meta.env.SITE + og_image : import.meta.env.SITE + "/og-image.png"}>
		<meta property="og:locale" content="en_GB">
		<meta property="og:site_name" content="August Glass Designs">
		<meta property="og:url" content={import.meta.env.SITE}>

		<meta property="twitter:title" content={title}>
		<meta property="twitter:description" content={description}>
		<meta property="twitter:image" content={og_image ? import.meta.env.SITE + og_image : import.meta.env.SITE + "/og-image.png"}>
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:creator" content="@mostlymayhem">

		<ViewTransitions />
	</head>
	<body class="min-h-screen flex flex-col items-center justify-center">
		<main class={cn(
			"min-h-[calc(100vh-5rem-2rem-1px)] w-full max-w-[1300px] py-16 px-12 space-y-20 md:space-y-24",
			Astro.props.class,
		)}>
			<slot />
		</main>
		<footer class="w-full h-20 border-t justify-self-end flex items-center justify-center mt-8">
			<div class="w-screen max-w-[1300px] px-12 flex justify-between items-center gap-2">
				<a href="/" class="flex flex-col -space-y-1" data-astro-prefetch>
					<h5 class="sm:hidden text-xl leading-tight">August Glass Designs</h5>
					<h5 class="text-xl hidden sm:block">Glass Display Cases & Home Decor</h5>
					<span class="text-lg hidden sm:block">Handmade in Sussex, England.</span>
				</a>
				<div class="flex items-center gap-2">
					<a href="/contact" target="_blank" referrerpolicy="no-referrer">
						<svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 1024 1024">
							<title>Email</title>
							<path d="M874.666667 375.189333V746.666667a64 64 0 0 1-64 64H213.333333a64 64 0 0 1-64-64V375.189333l266.090667 225.6a149.333333 149.333333 0 0 0 193.152 0L874.666667 375.189333zM810.666667 213.333333a64.789333 64.789333 0 0 1 22.826666 4.181334 63.616 63.616 0 0 1 26.794667 19.413333 64.32 64.32 0 0 1 9.344 15.466667c2.773333 6.570667 4.48 13.696 4.906667 21.184L874.666667 277.333333v21.333334L553.536 572.586667a64 64 0 0 1-79.893333 2.538666l-3.178667-2.56L149.333333 298.666667v-21.333334a63.786667 63.786667 0 0 1 35.136-57.130666A63.872 63.872 0 0 1 213.333333 213.333333h597.333334z"  />
						</svg>
					</a>
					<a href="https://www.facebook.com/AugustGlassDesigns" target="_blank" referrerpolicy="no-referrer">
						<svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 24 24">
							<title>Facebook</title>
							<path d="M12,2C6.477,2,2,6.477,2,12c0,5.013,3.693,9.153,8.505,9.876V14.65H8.031v-2.629h2.474v-1.749 c0-2.896,1.411-4.167,3.818-4.167c1.153,0,1.762,0.085,2.051,0.124v2.294h-1.642c-1.022,0-1.379,0.969-1.379,2.061v1.437h2.995 l-0.406,2.629h-2.588v7.247C18.235,21.236,22,17.062,22,12C22,6.477,17.523,2,12,2z"></path>
						</svg>
					</a>
					<a href="https://twitter.com/mostlymayhem" target="_blank" referrerpolicy="no-referrer">
						<svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 24 24">
							<title>Twitter</title>
							<path d="M22,3.999c-0.78,0.463-2.345,1.094-3.265,1.276c-0.027,0.007-0.049,0.016-0.075,0.023c-0.813-0.802-1.927-1.299-3.16-1.299 c-2.485,0-4.5,2.015-4.5,4.5c0,0.131-0.011,0.372,0,0.5c-3.353,0-5.905-1.756-7.735-4c-0.199,0.5-0.286,1.29-0.286,2.032 c0,1.401,1.095,2.777,2.8,3.63c-0.314,0.081-0.66,0.139-1.02,0.139c-0.581,0-1.196-0.153-1.759-0.617c0,0.017,0,0.033,0,0.051 c0,1.958,2.078,3.291,3.926,3.662c-0.375,0.221-1.131,0.243-1.5,0.243c-0.26,0-1.18-0.119-1.426-0.165 c0.514,1.605,2.368,2.507,4.135,2.539c-1.382,1.084-2.341,1.486-5.171,1.486H2C3.788,19.145,6.065,20,8.347,20 C15.777,20,20,14.337,20,8.999c0-0.086-0.002-0.266-0.005-0.447C19.995,8.534,20,8.517,20,8.499c0-0.027-0.008-0.053-0.008-0.08 c-0.003-0.136-0.006-0.263-0.009-0.329c0.79-0.57,1.475-1.281,2.017-2.091c-0.725,0.322-1.503,0.538-2.32,0.636 C20.514,6.135,21.699,4.943,22,3.999z"></path>
						</svg>
					</a>
				</div>
			</div>
		</footer>
		<style is:global>
			@tailwind base;
			@tailwind components;
			@tailwind utilities;

			@layer base {
				* { @apply text-secondary border-secondary; }
				html, body { @apply bg-background font-serif tracking-tight; }

				h1 { @apply text-primary leading-[0.9] font-display text-6xl lg:text-7xl tracking-tighter; }
				h2 { @apply text-primary leading-[0.9] font-display text-4xl sm:text-5xl tracking-tighter; }
				h3 { @apply text-primary leading-[0.9] font-display text-3xl sm:text-4xl tracking-tighter; }
				h4 { @apply text-primary leading-[0.9] font-display text-2xl sm:text-3xl; }
				h5 { @apply text-primary leading-[0.9] font-display text-xl sm:text-2xl; }

				p, span, a, div, button, strong, em, label, li, td, blockquote { @apply text-xl lg:text-2xl; }

				img { @apply border rounded-md }

				.balance { @apply text-balance inline-block align-top; }
			}
		</style>
	</body>
</html>
