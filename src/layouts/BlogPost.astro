---
import Layout from "~/layouts/Layout.astro"

interface Props {
  frontmatter: {
    layout: string
    title: string
    description: string
    image: string
    alt: string
  }
}

const { frontmatter } = Astro.props
---

<Layout
  title={frontmatter.title}
  description={frontmatter.description}
  og_image={frontmatter.image}
  og_type="article"
  class="max-w-5xl space-y-12 md:space-y-16"
>
  <h1 class="balance">{frontmatter.title}</h1>
  <div class="space-y-6 md:space-y-10">
    <slot />
  </div>
</Layout>
