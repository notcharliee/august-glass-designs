---
import Layout from "~/layouts/Layout.astro"

interface Props {
  frontmatter: {
    layout: string,
    title: string,
    description: string,
    image: string,
    alt: string,
  },
}

const { frontmatter } = Astro.props
---

<Layout
  title={frontmatter.title}
  description={frontmatter.description}
>
	<main class="w-full max-w-[1300px] p-12 md:p-16 space-y-6 md:space-y-10">
    <slot />
	</main>
</Layout>
